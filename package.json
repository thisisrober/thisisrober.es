{
  "name": "thisisrober",
  "version": "4.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "node --watch server/index.js",
    "build": "vite build",
    "preview": "vite preview",
    "db:init": "node server/database/seed.js",
    "start": "node server/index.js",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "db:backup": "node -e \"import('fs').then(f=>{const d=new Date().toISOString().replace(/[:.]/g,'-');f.default.copyFileSync('server/database/thisisrober.db','server/database/backup_'+d+'.db');console.log('Backup: backup_'+d+'.db')})\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.3",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "framer-motion": "^12.33.0",
    "marked": "^15.0.4",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.7",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "react-router-dom": "^6.28.0",
    "react-simplemde-editor": "^5.2.0",
    "sql.js": "^1.11.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "vite": "^6.0.0"
  }
}
